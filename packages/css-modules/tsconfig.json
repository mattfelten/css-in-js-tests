{
	"compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "dist",
		"esModuleInterop": true,
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "moduleResolution": "node",
        "jsx": "react",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            },
        ],
        "outDir": "dist",
    },
    "include": [ "src/**/*" ],
}
